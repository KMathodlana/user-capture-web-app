@page
@using UserCaptureTest1.Models
@model UserCaptureTest1.Pages.UserModel
@{
    <div class="row">
        <div class="col-sm-10">
            <h3 class="display-3">Users</h3>
        </div>
        <div class="col-sm-2" style="align-content:center">
            <button type="button" class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#createUserModal">Add User</button>
        </div>
    </div>

    <div class="container">
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Cellphone</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (UserData user in Model.Users)
                {
                    <tr>
                        <td>@user.UserId</td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.Cellphone</td>
                        <td class="btn-group">
                            <form>
                                <button type="button" id="editUserButton" class="btn btn-sm btn-outline-dark" data-userid="@user.UserId" data-first="@user.FirstName" data-last="@user.LastName" data-email="@user.Email" data-cellphone="@user.Cellphone" data-bs-target="#editUserModal" data-bs-toggle="modal">Edit</button>
                            </form>
                            <form method="post" asp-page-handler="DeleteUser" asp-route-userId="@user.UserId">
                                <button type="submit" class="btn btn-sm btn-outline-danger" style="margin-left:10px;">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div>
        <partial name="_AddUser" />
        <partial name="_EditUser" />
    </div>
}
