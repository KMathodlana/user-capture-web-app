@model UserModel

@{
    <div class="form-group">
        <label for="firstName">First Name:</label>
        <input type="text" class="form-control" id="firstName" name="FirstName" data-val-required="The First Name field is required." asp-for="User.FirstName">
        <span class="field-validation-valid" data-valmsg-for="firstName" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="lastName">Last Name:</label>
        <input type="text" class="form-control" id="lastName" name="LastName" data-val-required="The Last Name field is required." asp-for="User.LastName">
        <span class="field-validation-valid" data-valmsg-for="lastName" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" class="form-control" id="email" name="Email" data-val-required="The Username field is required." asp-for="User.Email">
        <span class="field-validation-valid" data-valmsg-for="email" data-valmsg-replace="true"></span>
    </div>
    <div class="form-group">
        <label for="cellphoneNumber">Cellphone Number:</label>
        <input type="text" class="form-control" id="cellphone" name="Cellphone" data-val-minlength="The field Cellphone Number must be a number with a minimum length of 10."
               data-val-minlength-min="10" data-val-required="The Cellphone Number field is required." asp-for="User.Cellphone">
        <span class="field-validation-valid" data-valmsg-for="cellphone" data-valmsg-replace="true"></span>
    </div>
}
